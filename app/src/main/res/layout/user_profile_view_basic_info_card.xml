<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_middle"
    app:cardCornerRadius="@dimen/spacing_xsmall"
    app:cardElevation="@dimen/spacing_xsmall"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toggle_basic_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:minHeight="?attr/actionBarSize"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_info_deep_purple_900_24dp"
                android:contentDescription="@string/default_image_button_string" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/user_profile_card_title_basic_info"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/kloudforj_black"
                android:textStyle="bold"
                android:textSize="@dimen/TextViewLabel"
                android:paddingStart="@dimen/spacing_large"
                android:paddingEnd="@dimen/spacing_large"/>

            <ImageView
                android:id="@+id/img_toggle_basic_info"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="@dimen/spacing_mxlarge"
                android:paddingStart="@dimen/spacing_large"
                android:paddingEnd="@dimen/spacing_large"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:rotation="180"
                android:src="@drawable/ic_expand_more_grey_60_24dp"
                android:contentDescription="@string/default_image_button_string" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider_line"/>

        <LinearLayout
            android:id="@+id/basic_info_expanded_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_middle"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_middle">

                    <ImageButton
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_person_kloudforj_black_24dp"
                        tools:ignore="VectorDrawableCompat"
                        android:contentDescription="@string/default_image_button_string" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_profile_name"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="@dimen/TextViewLabel" />

                        <TextView
                            android:id="@+id/text_full_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_middle"
                            android:lineSpacingExtra="@dimen/spacing_xsmall"
                            android:textSize="@dimen/TextViewLabel"
                            android:hint="@string/default_string"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/kloudforj_black" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_middle"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <ImageButton
                            android:layout_width="@dimen/spacing_mlarge"
                            android:layout_height="@dimen/spacing_mlarge"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/ic_cake_kloudforj_black_24dp"
                            tools:ignore="VectorDrawableCompat"
                            android:contentDescription="@string/default_image_button_string" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/spacing_large"
                            android:paddingEnd="@dimen/spacing_large"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_profile_date_of_birth"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:textSize="@dimen/TextViewLabel" />

                            <TextView
                                android:id="@+id/text_birth_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/spacing_middle"
                                android:lineSpacingExtra="@dimen/spacing_xsmall"
                                android:textSize="@dimen/TextViewLabel"
                                android:hint="@string/user_profile_birthdate"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/kloudforj_black" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <ImageButton
                            android:layout_width="@dimen/spacing_mlarge"
                            android:layout_height="@dimen/spacing_mlarge"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/ic_wc_kloudforj_black_24dp"
                            tools:ignore="VectorDrawableCompat"
                            android:contentDescription="@string/default_image_button_string" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/spacing_large"
                            android:paddingEnd="@dimen/spacing_large"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_profile_gender"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:textSize="@dimen/TextViewLabel" />

                            <TextView
                                android:id="@+id/textview_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/spacing_middle"
                                android:lineSpacingExtra="@dimen/spacing_xsmall"
                                android:textSize="@dimen/TextViewLabel"
                                android:hint="@string/user_profile_gender_female"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/kloudforj_black" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_middle">

                    <ImageButton
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_favorite_kloudforj_black_24dp"
                        tools:ignore="VectorDrawableCompat"
                        android:contentDescription="@string/default_image_button_string" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_profile_marital_status"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="@dimen/TextViewLabel" />

                        <TextView
                            android:id="@+id/text_marital_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_middle"
                            android:lineSpacingExtra="@dimen/spacing_xsmall"
                            android:textSize="@dimen/TextViewLabel"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/kloudforj_black" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayout_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_middle"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_local_phone_kloudforj_black_24dp"
                        android:contentDescription="@string/default_image_button_string" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_profile_phone_number"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="@dimen/TextViewLabel" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/text_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/spacing_middle"
                                android:lineSpacingExtra="@dimen/spacing_xsmall"
                                android:textSize="@dimen/TextViewLabel"
                                android:textColor="@color/kloudforj_black"
                                android:hint="@string/user_profile_number"
                                android:layout_weight="1"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:layout_weight="1">

                                <ImageButton
                                    android:id="@+id/phone_number_not_verified"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_info_red_900_24dp"
                                    android:background="@color/transparent"
                                    android:contentDescription="@string/default_image_button_string" />

                                <ImageButton
                                    android:id="@+id/phone_number_verified"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:src="@drawable/ic_verified_user_green_900_24dp"
                                    android:visibility="gone"
                                    android:contentDescription="@string/default_image_button_string" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayout_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_middle"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_email_kloudforj_black_24dp"
                        tools:ignore="VectorDrawableCompat"
                        android:contentDescription="@string/default_image_button_string" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_profile_email"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="@dimen/TextViewLabel" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_user_mail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/spacing_middle"
                                android:lineSpacingExtra="@dimen/spacing_xsmall"
                                android:textSize="@dimen/TextViewLabel"
                                android:textColor="@color/kloudforj_black"
                                android:hint="tagariwalayashesh@gmail.com"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end">

                                <ImageButton
                                    android:id="@+id/email_not_verified"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:src="@drawable/ic_info_red_900_24dp"
                                    android:contentDescription="@string/default_image_button_string" />

                                <ImageButton
                                    android:id="@+id/email_verified"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:src="@drawable/ic_verified_user_green_900_24dp"
                                    android:visibility="gone"
                                    android:contentDescription="@string/default_image_button_string" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_middle">

                    <ImageButton
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_recent_actors_kloudforj_black_24dp"
                        tools:ignore="TooManyViews,VectorDrawableCompat"
                        android:contentDescription="@string/default_image_button_string" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_profile_caste"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="@dimen/TextViewLabel" />

                        <TextView
                            android:id="@+id/text_user_caste"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_middle"
                            android:lineSpacingExtra="@dimen/spacing_xsmall"
                            android:textSize="@dimen/TextViewLabel"
                            android:hint="@string/user_profile_caste"
                            android:textColor="@color/kloudforj_black"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_middle">

                    <ImageButton
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_recent_actors_kloudforj_black_24dp"
                        tools:ignore="VectorDrawableCompat"
                        android:contentDescription="@string/default_image_button_string" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_profile_sub_caste_1"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="@dimen/TextViewLabel" />

                        <TextView
                            android:id="@+id/text_user_sub_caste_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_middle"
                            android:textSize="@dimen/TextViewLabel"
                            android:textColor="@color/kloudforj_black"
                            android:lineSpacingExtra="@dimen/spacing_xsmall"
                            android:hint="@string/user_profile_sub_caste_1"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_middle">

                    <ImageButton
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_recent_actors_kloudforj_black_24dp"
                        tools:ignore="VectorDrawableCompat"
                        android:contentDescription="@string/default_image_button_string" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_profile_sub_caste_2"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="@dimen/TextViewLabel" />

                        <TextView
                            android:id="@+id/text_user_sub_caste_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_middle"
                            android:textSize="@dimen/TextViewLabel"
                            android:textColor="@color/kloudforj_black"
                            android:lineSpacingExtra="@dimen/spacing_xsmall"
                            android:hint="@string/user_profile_sub_caste_2"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>