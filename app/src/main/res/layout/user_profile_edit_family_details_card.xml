<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_middle"
    app:cardCornerRadius="@dimen/spacing_xsmall"
    app:cardElevation="@dimen/spacing_xsmall"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_middle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:gravity="center"
            android:text="@string/user_profile_card_title_family_details"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/grey_90" />

        <ImageView
            android:layout_width="@dimen/spacing_mxlarge"
            android:layout_height="@dimen/ImageViewHeight"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_medium"
            android:contentDescription="@string/default_image_button_string"
            android:src="@drawable/swipe_up_handle_red_700" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_middle"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_middle"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingStart="@dimen/spacing_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editText_father_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_large"
                            android:drawableStart="@drawable/ic_person_kloudforj_black_24dp"
                            android:hint="@string/user_profile_fathers_name"
                            android:singleLine="true"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/TextViewLabel" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_middle"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingStart="@dimen/spacing_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editText_father_education"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_large"
                            android:drawableStart="@drawable/ic_school_kloudforj_black_24dp"
                            android:hint="@string/user_profile_fathers_education"
                            android:singleLine="true"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/TextViewLabel" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_middle"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingStart="@dimen/spacing_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editText_father_profession"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_large"
                            android:drawableStart="@drawable/ic_work_kloudforj_black_24dp"
                            android:hint="@string/user_profile_fathers_profession"
                            android:singleLine="true"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/TextViewLabel" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_middle"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingStart="@dimen/spacing_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editText_father_birth_place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_large"
                            android:drawableStart="@drawable/ic_person_pin_kloudforj_black_24dp"
                            android:hint="@string/user_profile_fathers_birth_place"
                            android:singleLine="true"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/TextViewLabel" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_middle"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingStart="@dimen/spacing_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editText_mother_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_large"
                            android:drawableStart="@drawable/ic_person_kloudforj_black_24dp"
                            android:hint="@string/user_profile_mothers_name"
                            android:singleLine="true"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/TextViewLabel" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_middle"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingStart="@dimen/spacing_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editText_mother_education"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_large"
                            android:drawableStart="@drawable/ic_school_kloudforj_black_24dp"
                            android:hint="@string/user_profile_mothers_education"
                            android:singleLine="true"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/TextViewLabel" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_middle"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingStart="@dimen/spacing_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editText_mother_profession"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_large"
                            android:drawableStart="@drawable/ic_work_kloudforj_black_24dp"
                            android:hint="@string/user_profile_mothers_profession"
                            android:singleLine="true"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/TextViewLabel" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_middle"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingStart="@dimen/spacing_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editText_mother_birth_place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_large"
                            android:drawableStart="@drawable/ic_person_pin_kloudforj_black_24dp"
                            android:hint="@string/user_profile_mothers_birth_place"
                            android:singleLine="true"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorPrimary"
                            android:textSize="@dimen/TextViewLabel" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>