<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_middle"
    app:cardCornerRadius="@dimen/spacing_xsmall"
    app:cardElevation="@dimen/spacing_xsmall"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_middle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:gravity="center"
            android:text="@string/user_profile_card_title_extra_info"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/grey_90" />

        <ImageView
            android:layout_width="@dimen/spacing_mxlarge"
            android:layout_height="@dimen/ImageViewHeight"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_medium"
            android:contentDescription="@string/default_image_button_string"
            android:src="@drawable/swipe_up_handle"
            android:tint="@color/red_700" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_middle"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_middle"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingStart="@dimen/spacing_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editText_user_height"
                            android:layout_width="match_parent"
                            android:textSize="@dimen/TextViewLabel"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_large"
                            android:drawableStart="@drawable/ic_accessibility_white_24dp"
                            android:drawableTint="@color/kloudforj_black"
                            android:hint="@string/user_profile_height"
                            android:singleLine="true"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorPrimary" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_middle"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingStart="@dimen/spacing_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editText_user_weight"
                            android:layout_width="match_parent"
                            android:textSize="@dimen/TextViewLabel"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_large"
                            android:drawableStart="@drawable/ic_fitness_center_white_24dp"
                            android:drawableTint="@color/kloudforj_black"
                            android:hint="@string/user_profile_weight"
                            android:singleLine="true"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorPrimary" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_middle"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingStart="@dimen/spacing_large">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/colorPrimary">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/editText_user_birth_place"
                            android:layout_width="match_parent"
                            android:textSize="@dimen/TextViewLabel"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/spacing_large"
                            android:drawableStart="@drawable/ic_person_pin_black_24dp"
                            android:drawableTint="@color/kloudforj_black"
                            android:hint="@string/user_profile_birth_place"
                            android:singleLine="true"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black"
                            android:textColorHint="@color/colorPrimary" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_large"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingStart="@dimen/spacing_large">

                <ImageButton
                    android:layout_width="@dimen/spacing_mlarge"
                    android:layout_height="@dimen/spacing_mlarge"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/default_image_button_string"
                    android:tint="@color/kloudforj_black"
                    app:srcCompat="@drawable/ic_access_time_white_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/spacing_mlarge"
                    android:paddingStart="@dimen/spacing_mlarge"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_profile_birth_time"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/TextViewLabel"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_birth_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:hint="@string/user_profile_birthtime"
                            android:lineSpacingExtra="@dimen/spacing_xsmall"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textSize="@dimen/TextViewLabel" />

                        <ImageButton
                            android:id="@+id/imagebutton_birth_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_middle"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:background="@color/transparent"
                            android:contentDescription="@string/default_image_button_string"
                            android:src="@drawable/ic_access_time_white_24dp"
                            android:tint="@color/kloudforj_black" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/spacing_middle"
                android:paddingStart="@dimen/spacing_large"
                android:paddingEnd="@dimen/spacing_large"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/default_image_button_string"
                    android:src="@drawable/ic_directions_bike_black_24dp"
                    android:tint="@color/kloudforj_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/spacing_middle"
                    android:paddingEnd="@dimen/spacing_middle"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_profile_hobbies"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/TextViewLabel"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end">

                            <ImageButton
                                android:id="@+id/imagebutton_add_hobbies"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:contentDescription="@string/default_image_button_string"
                                android:src="@drawable/ic_add_white_24dp"
                                android:tint="@color/colorPrimary" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearlayout_hobbies_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:paddingTop="@dimen/spacing_middle"
                        android:orientation="vertical">

                    </LinearLayout>
                    <!--<EditText-->
                    <!--android:id="@+id/editText_hobby"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/spacing_medium"-->
                    <!--android:lineSpacingExtra="@dimen/spacing_xsmall"-->
                    <!--android:hint="@string/user_profile_default_hobbies"-->
                    <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"/>-->

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/spacing_middle"
                android:paddingEnd="@dimen/spacing_large"
                android:paddingStart="@dimen/spacing_large">

                <ImageButton
                    android:layout_width="@dimen/spacing_mlarge"
                    android:layout_height="@dimen/spacing_mlarge"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/default_image_button_string"
                    android:tint="@color/kloudforj_black"
                    app:srcCompat="@drawable/ic_person_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <View
                    android:layout_width="@dimen/spacing_middle"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_profile_about_me"
                        android:textSize="@dimen/TextViewLabel"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editText_about_me"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:hint="@string/lorem_ipsum"
                        android:lineSpacingExtra="@dimen/spacing_xsmall"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>