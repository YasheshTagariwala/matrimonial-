<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_middle"
    app:cardCornerRadius="@dimen/spacing_xsmall"
    app:cardElevation="@dimen/spacing_xsmall"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toggle_family_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:minHeight="?attr/actionBarSize"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_people_deep_purple_900_24dp"
                android:contentDescription="@string/default_image_button_string" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/user_profile_card_title_family_details"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_90"
                android:textStyle="bold"
                android:paddingStart="@dimen/spacing_large"
                android:paddingEnd="@dimen/spacing_large"
                android:textSize="@dimen/TextViewLabel"/>

            <ImageView
                android:id="@+id/img_toggle_family_info"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="@dimen/spacing_mxlarge"
                android:paddingStart="@dimen/spacing_large"
                android:paddingEnd="@dimen/spacing_large"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_expand_more_grey_60_24dp"
                android:contentDescription="@string/default_image_button_string" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider_line"/>

        <LinearLayout
            android:id="@+id/family_info_expanded_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="@dimen/spacing_middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_middle">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:gravity="center"
                    android:text="@string/user_profile_father"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/grey_90" />

                <ImageView
                    android:layout_width="@dimen/spacing_mxlarge"
                    android:layout_height="@dimen/ImageViewHeight"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:src="@drawable/swipe_up_handle_red_700"
                    android:contentDescription="@string/default_image_button_string" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/spacing_middle"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_person_kloudforj_black_24dp"
                        tools:ignore="VectorDrawableCompat"
                        android:contentDescription="@string/default_image_button_string" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_profile_fathers_name"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:paddingBottom="@dimen/spacing_xsmall"
                            android:textSize="@dimen/TextViewLabel" />

                        <TextView
                            android:id="@+id/text_father_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_xsmall"
                            android:hint="@string/user_profile_default_fathers_name"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/kloudforj_black"
                            android:textSize="@dimen/TextViewLabel" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/spacing_mlarge"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_school_kloudforj_black_24dp"
                        tools:ignore="VectorDrawableCompat"
                        android:contentDescription="@string/default_image_button_string" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_profile_fathers_education"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:paddingBottom="@dimen/spacing_xsmall"
                            android:textSize="@dimen/TextViewLabel" />

                        <TextView
                            android:id="@+id/text_father_education"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_xsmall"
                            android:hint="@string/user_profile_default_fathers_education"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/kloudforj_black"
                            android:textSize="@dimen/TextViewLabel" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/spacing_mlarge"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_work_kloudforj_black_24dp"
                        tools:ignore="VectorDrawableCompat"
                        android:contentDescription="@string/default_image_button_string" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_profile_fathers_profession"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:paddingBottom="@dimen/spacing_xsmall"
                            android:textSize="@dimen/TextViewLabel" />

                        <TextView
                            android:id="@+id/text_father_profession"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_xsmall"
                            android:hint="@string/user_profile_default_fathers_profession"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/kloudforj_black"
                            android:textSize="@dimen/TextViewLabel" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/spacing_mlarge"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_person_pin_kloudforj_black_24dp"
                        tools:ignore="VectorDrawableCompat"
                        android:contentDescription="@string/default_image_button_string" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_profile_fathers_birth_place"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:paddingBottom="@dimen/spacing_xsmall"
                            android:textSize="@dimen/TextViewLabel" />

                        <TextView
                            android:id="@+id/text_father_birth_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_xsmall"
                            android:hint="@string/user_profile_default_fathers_birth_place"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/kloudforj_black"
                            android:textSize="@dimen/TextViewLabel" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_middle">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:gravity="center"
                    android:text="@string/user_profile_mother"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/grey_90" />

                <ImageView
                    android:layout_width="@dimen/spacing_mxlarge"
                    android:layout_height="@dimen/ImageViewHeight"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:src="@drawable/swipe_up_handle_red_700"
                    android:contentDescription="@string/default_image_button_string" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/spacing_mlarge"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_person_kloudforj_black_24dp"
                        tools:ignore="VectorDrawableCompat"
                        android:contentDescription="@string/default_image_button_string" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_profile_mothers_name"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:paddingBottom="@dimen/spacing_xsmall"
                            android:textSize="@dimen/TextViewLabel" />

                        <TextView
                            android:id="@+id/text_mother_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_xsmall"
                            android:hint="@string/user_profile_default_mothers_name"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/kloudforj_black"
                            android:textSize="@dimen/TextViewLabel" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/spacing_mlarge"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_school_kloudforj_black_24dp"
                        tools:ignore="VectorDrawableCompat"
                        android:contentDescription="@string/default_image_button_string" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_profile_mothers_education"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:paddingBottom="@dimen/spacing_xsmall"
                            android:textSize="@dimen/TextViewLabel" />

                        <TextView
                            android:id="@+id/text_mother_education"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_xsmall"
                            android:hint="@string/user_profile_default_mothers_education"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/kloudforj_black"
                            android:textSize="@dimen/TextViewLabel" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/spacing_mlarge"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_work_kloudforj_black_24dp"
                        tools:ignore="VectorDrawableCompat"
                        android:contentDescription="@string/default_image_button_string" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_profile_mothers_profession"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:paddingBottom="@dimen/spacing_xsmall"
                            android:textSize="@dimen/TextViewLabel" />

                        <TextView
                            android:id="@+id/text_mother_profession"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_xsmall"
                            android:hint="@string/user_profile_default_mothers_profession"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/kloudforj_black"
                            android:textSize="@dimen/TextViewLabel" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/spacing_mlarge"
                    android:paddingBottom="@dimen/spacing_middle"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="@dimen/spacing_mlarge"
                        android:layout_height="@dimen/spacing_mlarge"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_person_pin_kloudforj_black_24dp"
                        tools:ignore="VectorDrawableCompat"
                        android:contentDescription="@string/default_image_button_string" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_large"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_profile_mothers_birth_place"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:paddingBottom="@dimen/spacing_xsmall"
                            android:textSize="@dimen/TextViewLabel" />

                        <TextView
                            android:id="@+id/text_mother_birth_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_xsmall"
                            android:hint="@string/user_profile_default_mothers_birth_place"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                            android:textColor="@color/kloudforj_black"
                            android:textSize="@dimen/TextViewLabel" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>